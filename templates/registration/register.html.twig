{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container-prim">
    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.first_name) }}
        {{ form_row(registrationForm.last_name) }}
        {{ form_row(registrationForm.country) }}
        {{ form_row(registrationForm.city) }}
        {{ form_row(registrationForm.street) }}
        {{ form_row(registrationForm.house) }}
        {{ form_row(registrationForm.zip_code) }}
        {{ form_row(registrationForm.phone) }}
        {{ form_row(registrationForm.picture) }}
        {{ form_row(registrationForm.created_at) }}
        {{ form_row(registrationForm.birth_date) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
