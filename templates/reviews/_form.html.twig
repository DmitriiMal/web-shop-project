{{ form_start(form, {'attr':{'novalidate':'novalidate'} }) }}
    
        {# {{ dump(cart) }}
        {{ dump(nameProduct) }} #}
        

    <div class="row row-cols-xs-1 row-cols-md-2">
        <div>
            <img src="{{ asset('pictures/'~ picture) }}" alt="{{ nameProduct }}" class="shadow" style="width:256px;height:256px;"> 
        </div>
        <div>
            <h1>{{ nameProduct }}</h1>
            <small>The day purchased was {{ cart[0].orderDate ? cart[0].orderDate|date('d.m.Y') : '' }}.</small>
            <p>{{ descriptionProduct }}</p>
        </div>
        
    </div>
    <div class="row">
        <div>
            {{ form_row(form.rating) }}
            {{ form_row(form.review) }}
        </div>
    </div>
    <hr>
    <div class="d-flex gap-3 justify-content-center">
        <button class="btn btn-success">{{ button_label|default('Save') }}</button> 

        <a href="{{ path('app_user_show', {'id': app.user.id}) }}" class="btn btn-secondary btn1">Back to list</a>
    </div>
{{ form_end(form) }}
