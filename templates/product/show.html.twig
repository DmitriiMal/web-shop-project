{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}
{% block stylesheets %}
<style>
    img {
        width: 100%;
        height: 75vh;
    }
    .btns {
        width: 250px;
    }

    .detailSpan {

        color: red;
    }

    h1,
    h2,
    h3,
    h4,
    h5 h6 {
        font-family: fantasy;
    }
</style>

{% endblock %}

{% block body %}
<div class="container-prim">
    <div class="row row-cols-sm-2 row-cols-xs-1">
        <div>
            <img src="{{ asset('pictures/'~product.picture) }}" class="w-100 h-75 shadow" alt="{{ product.name }}">
        </div>
        <div>
            <h2><b>Product:</b>
                <span class="detailSpan">{{ product.name }}</span>
            </h2>
            <table class="table table-striped table-hover">
                <tbody>
                    <tr>
                        <th>Description:</th>
                        <td> {{ product.description }}</td>
                    </tr>                    
                    <tr>
                        <th>Price:</th>
                        <td> {{ product.price|format_currency("EUR") }} </td>
                    </tr>
                    <tr>
                        <th>Quantity:</th>
                        <td>{{ product.quantity }}</td>
                    <tr>
                        <th>Available:</th>
                        <td>{{ product.availability ? 'Yes' : 'No'}}</td>
                    </tr>
                    <tr>
                        <th>Hidden:</th>
                        <td>{{ product.shownhidden ? 'Yes' : 'No'}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <hr>
    <div class="row row-cols-xs-1 row-cols-sm-2">
        <div>
            <a class="btn btn-primary btns" href="{{ path('app_product_index') }}"><i class="bi bi-box-arrow-left"></i> Back to list</a>
        </div>
        <div class="d-flex gap-3 justify-content-center">
            <a class="btn btn-warning btns" href="{{ path('app_product_edit', {'id': product.id}) }}"><i class="bi bi-pencil-square"></i> Edit</a>
            {{ include('product/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}