{{ form_start(form) }}

    {{ product.name) }}
    {{ product.description) }}
    
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-7 col-xs-4">
            {{ product.picture) }}
            <div class="col-6">
                {{ product.fk_categoryID) }}    
            </div>
        
            <div class="col-2">
                {{ product.price) }}
                {{ product.quantity) }}

                <div class="form-check form-switch ps-3">
                    {{ product.availability) }}
                </div>
                <div class="form-check form-switch ps-3">
                    {{ product.shown_hidden) }}
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-5 col-xs-2 text-end" style="padding-top:36px;">
            {% if (product.id) %}
                <img class="shadow" src="{{ asset('pictures/'~ product.picture) }}" alt="{{ product.name }}" style="width:100% !important;">
            {% endif %}
        </div>
    </div>
    <hr>
    {# {{ form_widget(form) }} #}
    
    <div class="d-flex gap-3 justify-content-center">
        <button class="btn btn-success btn1"><i class="bi bi-floppy"></i> {{ button_label|default('Save') }}</button>

        <a href="{{ path('app_product_index') }}" class="btn btn-secondary btn1"><i class="bi bi-box-arrow-left"></i> Back to list</a>

        {# {{ include('product/_delete_form.html.twig') }} #}
    </div>
{{ form_end(form) }}
