{{ form_errors(form) }}
  
{{ form_start(form, {'attr':{'novalidate':'novalidate'} }) }}
    <div class="row row-cols-xs-1 row-cols-md-2">
        <div>
            {{ form_row(form.first_name) }}
        </div>
        <div>
            {{ form_row(form.last_name) }}
        </div>
    </div>
    <div class="row row-cols-xs-1 row-cols-md-2">
        <div>
            {{ form_row(form.picture) }}    
            {{ form_row(form.birth_date) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword, {label: 'Password'}) }}
        </div>        
        
        <div class="d-flex justify-content-center align-items-center">
            {% if (user.id) %}
                <img src="{{ asset('pictures/users/'~ user.picture) }}" alt="{{ user.firstName }}" class="rounded-circle shadow" style="width:256px;height:256px; border: 8px solid gold;"> 
            {% endif %}    
        </div>
    </div>
    
    <div class="row row-cols-xs-1 row-cols-md-2">
        <div>
            {{ form_row(form.street) }}
        </div>
        <div>
            {{ form_row(form.house) }}
        </div>
    </div>
    <div class="row row-cols-xs-1 row-cols-md-3">
        <div>
            {{ form_row(form.zip_code) }}
        </div>
        <div>
            {{ form_row(form.city) }}
        </div>
        <div>
            {{ form_row(form.country) }}
        </div>
    </div>

    <div class="w-25">
        {{ form_row(form.phone) }}
    </div>

    <div class="w-25 form-check form-switch ps-3">
        {{ form_row(form.banned) }}
    </div>
    <hr>
    <div class="d-flex gap-3 justify-content-center">
        <button class="btn btn-success">{{ button_label|default('Save') }}</button> 
        
        {% if user.id %}
        {# {{ include('user/_delete_form.html.twig') }} #}
        {% endif %}

        <a href="{{ path('app_user_index') }}" class="btn btn-secondary btn1">Back to list</a>
    </div>
{{ form_end(form) }}
      